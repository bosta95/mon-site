# En-têtes globaux pour tout le site
/*
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Content-Security-Policy: upgrade-insecure-requests
  Permissions-Policy: geolocation=(), microphone=()
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

# En-têtes pour les pages HTML avec cache court
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# En-têtes pour les articles de blog avec cache un peu plus long
/blog/*.html
  Cache-Control: public, max-age=86400, must-revalidate

# En-têtes pour les pages d'offres
/offres/*
  Cache-Control: public, max-age=3600, must-revalidate

# En-têtes pour les ressources statiques avec cache long
/images/*
  Cache-Control: public, max-age=31536000, immutable

/css/*
  Cache-Control: public, max-age=31536000, immutable

/videos/*
  Cache-Control: public, max-age=31536000, immutable

/*.js
  Cache-Control: public, max-age=31536000, immutable

/*.css
  Cache-Control: public, max-age=31536000, immutable

/*.svg
  Cache-Control: public, max-age=31536000, immutable

/*.webp
  Cache-Control: public, max-age=31536000, immutable

# Spécifications pour le sitemap et robots.txt
/sitemap.xml
  X-Robots-Tag: all
  Content-Type: application/xml; charset=UTF-8
  Cache-Control: public, max-age=86400

/robots.txt
  X-Robots-Tag: all
  Content-Type: text/plain; charset=UTF-8
  Cache-Control: public, max-age=3600 